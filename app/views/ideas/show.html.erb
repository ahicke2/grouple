<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Idea #<%= @idea.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Event</dt>
              <dd><%= @idea.event_id %></dd>

              <dt>Creator</dt>
              <dd><%= @idea.creator_id %></dd>

              <dt>Name</dt>
              <dd><%= @idea.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), ideas_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_idea_path(@idea), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @idea, method: :delete, data: { confirm: "Do you really want to delete this idea?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
